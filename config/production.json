{
  "server": {
    "port": 8080
  },
  "mongo": {
    "host": "mongo",
    "databaseName": "xendit"
  },
  "log4js": {
    "appenders": {
      "default": { "type": "file", "filename": "./logs/info.log" },
      "debug": { "type": "file", "filename": "./logs/debug.log" }
    },
    "categories": {
      "default": { "appenders": ["default"], "level": "info" },
      "debug": { "appenders": ["debug"], "level": "debug" }
    }
  }
}